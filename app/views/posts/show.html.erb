<div class="showcontainer">
  <p id="notice"><%= notice %></p>
<%= render 'post', post: @post %>
<% if @post.user.id == current_user.id %>
  <div class = 'text-center edit-links'>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
<% else %>
  <div class = 'text-center edit-links'>
    <%= link_to 'Back', posts_path %>
  </div>
<% end %>

<div class="showcontainer">
  <p id="notice"><%= notice %></p>

