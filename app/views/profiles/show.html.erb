<div class="showprofilecontainer">
  <div class="posts-wrapper">
    <div class="row profile-header">
      <div class="col-md-6">
        <div id="imgborder">
          <div class="img-circle">
            <%= image_tag @user.avatar_url.to_s, id: 'avatar-image' %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="user-name-and-follow">
          <h3 class="profile-user-name">
            <%= @user.user_name %>
          </h3>
          <span>
            <% if @user == current_user %>
              <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn edit-button' %>
            <% end %>
          </span>
        </div>
        <p class="profile-bio">
          <p>Bio: <%= @user.bio %></p>
        </p>
        <div class="user-statistics">
          <p>
           Posts: <%= @user.posts.count %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>
    <%= render 'posts/post', post: post %>
  <% end %>
</div>